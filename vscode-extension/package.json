{
  "name": "trueflow",
  "displayName": "TrueFlow - Deterministic Code Visualizer",
  "description": "Unblackbox LLM code with deterministic truth. Zero-code Python runtime instrumentation with 3D animated execution videos.",
  "version": "0.1.74",
  "publisher": "hevolve-ai",
  "license": "MIT",
  "icon": "resources/icon.png",
  "homepage": "https://github.com/hevolve-ai/trueflow",
  "bugs": {
    "url": "https://github.com/hevolve-ai/trueflow/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hevolve-ai/trueflow"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Visualization",
    "Programming Languages"
  ],
  "keywords": [
    "python",
    "profiler",
    "tracing",
    "visualization",
    "manim",
    "execution-flow",
    "code-visualization",
    "flamegraph",
    "plantuml"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:python",
    "workspaceContains:**/*.py"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "trueflow.autoIntegrate",
        "title": "TrueFlow: Auto-Integrate into Project",
        "icon": "$(zap)"
      },
      {
        "command": "trueflow.showTraceViewer",
        "title": "TrueFlow: Show Trace Viewer",
        "icon": "$(graph)"
      },
      {
        "command": "trueflow.generateManimVideo",
        "title": "TrueFlow: Generate Manim Video",
        "icon": "$(play)"
      },
      {
        "command": "trueflow.exportDiagram",
        "title": "TrueFlow: Export Diagram",
        "icon": "$(export)"
      },
      {
        "command": "trueflow.connectSocket",
        "title": "TrueFlow: Connect to Trace Server",
        "icon": "$(debug-start)"
      },
      {
        "command": "trueflow.disconnectSocket",
        "title": "TrueFlow: Disconnect from Trace Server",
        "icon": "$(debug-stop)"
      },
      {
        "command": "trueflow.downloadAIModel",
        "title": "TrueFlow: Download AI Model",
        "icon": "$(cloud-download)"
      },
      {
        "command": "trueflow.startAIServer",
        "title": "TrueFlow: Start AI Server",
        "icon": "$(server-process)"
      },
      {
        "command": "trueflow.stopAIServer",
        "title": "TrueFlow: Stop AI Server",
        "icon": "$(stop)"
      },
      {
        "command": "trueflow.showAIChat",
        "title": "TrueFlow: Open AI Chat",
        "icon": "$(comment-discussion)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "trueflow-sidebar",
          "title": "TrueFlow",
          "icon": "resources/icon-mono.svg"
        }
      ]
    },
    "views": {
      "trueflow-sidebar": [
        {
          "type": "webview",
          "id": "trueflow.mainView",
          "name": "TrueFlow"
        }
      ]
    },
    "configuration": {
      "title": "TrueFlow",
      "properties": {
        "trueflow.traceDirectory": {
          "type": "string",
          "default": "./.trueflow/traces",
          "description": "Directory to store trace files"
        },
        "trueflow.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh when new traces are detected"
        },
        "trueflow.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python interpreter"
        },
        "trueflow.socketHost": {
          "type": "string",
          "default": "localhost",
          "description": "Host for real-time trace streaming"
        },
        "trueflow.socketPort": {
          "type": "number",
          "default": 5678,
          "description": "Port for real-time trace streaming"
        },
        "trueflow.manimQuality": {
          "type": "string",
          "enum": [
            "low_quality",
            "medium_quality",
            "high_quality"
          ],
          "default": "medium_quality",
          "description": "Quality setting for Manim video generation"
        },
        "trueflow.aiBackend": {
          "type": "string",
          "enum": [
            "llama.cpp",
            "ollama"
          ],
          "default": "llama.cpp",
          "description": "AI backend to use for chat (llama.cpp local or Ollama)"
        },
        "trueflow.ollamaEndpoint": {
          "type": "string",
          "default": "http://127.0.0.1:11434",
          "description": "Ollama API endpoint URL"
        },
        "trueflow.ollamaModel": {
          "type": "string",
          "default": "llama3.2",
          "description": "Ollama model to use for chat"
        },
        "trueflow.gpuAcceleration": {
          "type": "boolean",
          "default": false,
          "description": "Enable GPU acceleration for llama.cpp (requires compatible GPU)"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == python",
          "command": "trueflow.autoIntegrate",
          "group": "trueflow"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .py",
          "command": "trueflow.autoIntegrate",
          "group": "trueflow"
        }
      ]
    }
  },
  "scripts": {
    "copy-runtime": "node -e \"const fs=require('fs');const path=require('path');const src='../src/main/resources/runtime_injector';const dest='./runtime_injector';if(!fs.existsSync(dest))fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(f=>{const s=path.join(src,f);if(fs.statSync(s).isFile())fs.copyFileSync(s,path.join(dest,f))});console.log('Runtime injector copied')\"",
    "vscode:prepublish": "npm run copy-runtime && npm run esbuild-base -- --minify",
    "compile": "npm run esbuild-base -- --sourcemap",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.24.2",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "ws": "^8.18.3"
  }
}
